<%@ show_msg({UserLink, Msg, Time, IsBig}) %>
<div class="msg<% if IsBig -> <<" bigmsg">>; true -> [] end %>">
<% if UserLink =/= undefined -> user_link(UserLink); true -> [] end %><span class="msgbody"><% Msg %></span> <span class="time"><% Time %></span></div>

<%@ user_link(UserLink) %><span class="user_link"><% UserLink %></span>

<%@ show_msgs(Data) %>
<div id="timeline"><div id="placeholder"></div><% Data %></div>
